<h2><%= t('views.common.title_index', name: Comment.model_name.human) %></h2>
<% if commentable.persisted? %>
  <% comments = commentable.comments %>
  <% comments.each do |comment| %>
      <p>
        <strong><%= comment.user.name %></strong>
        <%= comment.content %>
        <%= comment.created_at.strftime('%m/%d %H:%M') %>
        <% if current_user.id == comment.user_id %>
          <%= link_to t('views.common.destroy', name: Comment.model_name.human.downcase), [commentable, comment], data: { turbo_method: :delete } %>
        <% end %>
      </p>
  <% end %>
<% end %>

<%= form_with(model: [ commentable, commentable.comments.new ]) do |form| %>
  <%= form.text_field :content %>
  <%= form.submit t('views.shared.comment.new') %>
<% end %>
